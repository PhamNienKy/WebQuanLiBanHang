                        @Html.ActionLink("Đăng xuất ", "DangXuat", "DangNhap")

                    }
                    else
                    {
                        <li><a href="@Url.Action("Index","DangNhap")"> Đăng nhập </a></li>
                        <li><a href="@Url.Action("Dangky","Home")"> Đăng ký </a></li>
                    }


                    @Html.Action("GioHangPartial", "GioHang")
                  

                </ul>
                
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
 