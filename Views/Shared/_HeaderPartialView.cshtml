@using WebsiteQuanLyBanHang.Models
    <div style=" background: #377099;" class="header-top">
        <div class="container">
            <div class="search">
                @using(Html.BeginForm("KQTimKiem", "Search")) {
                    <input type="text"name="sTuKhoa" placeholder="Tên sản phẩm">
