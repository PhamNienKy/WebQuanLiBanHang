@using WebsiteQuanLyBanHang.Models;
@model IEnumerable<SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminnLayout.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 20);
}
<h2 style="text-align:center">Danh sách sản phẩm</h2>
@grid.GetHtml(
    tableStyle:"gridTable",
    headerStyle:"gridHead",
    footerStyle:"gridFooter",
    rowStyle:"gridRow",
    alternatingRowStyle:"gridAltRow",

    columns:grid.Columns(
        grid.Column("MaSP","Mã sản phẩm"),
        grid.Column("TenSp","Tên sản phẩm"),
        grid.Column("HinhAnh", "Hình ảnh", format: p => Html.Raw("<img width=\"150\" height=\"100\" src=\"../Content/HinhAnhSP/" + p.HinhAnh + "\">")),
        grid.Column("NgayCapNhat", "Ngay Cap Nhat",format:p=> Html.Raw(p.NgayCapNhat.ToString("dd/MM/yyyy") )) ,
        grid.Column("DonGia", "Đơn giá", format: p => Html.Raw(p.DonGia.ToString("#,##"))),
        grid.Column(format: p=> @Html.ActionLink("Chỉnh sửa", "ChinhSua", new {MaSP=p.MaSP})),
        grid.Column(format: p=> @Html.ActionLink("Xóa","Xoa",new {MaSP=p.MaSP}),style: "col1")
        )

    )
<style>
    .gridTable{
        width:100%;
    }
    
    .gridFooter{

    }
    .gridRow {
        background-color:aquamarine;
    }
    .gridAltRow {
        background-color:darkkhaki;
    }
    
</style>
