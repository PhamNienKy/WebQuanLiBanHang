@model WebsiteQuanLyBanHang.Models.SanPham

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Shared/_AdminnLayout.cshtml";
}

<h2 style="text-align:left">Chỉnh sửa sản phẩm</h2>

@using (Html.BeginForm("ChinhSua", "QuanLySanPham", FormMethod.Post, new { @enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="position: absolute; left: 20%;">

    <hr />
    @Html.ValidationSummary(true)
    @Html.Hidden("MaSP", Model.MaSP);

    <div class="form-group">
        <div class="col-md-8">
            Tên sản phẩm
            @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Đơn giá
            @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
        </div>
    </div>

    

    <div class="form-group">
        <div class="col-md-8">
            Cấu hình
            @Html.EditorFor(model => model.CauHinh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CauHinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Mô tả
            @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Hình ảnh
            <input name="HinhAnh" type="file"  /><br />
            
            <img src="@Url.Content("~/Content/HinhAnhSP/"+Model.HinhAnh)" width="150" height="100" />
            
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Hình ảnh 1
            <input name="HinhAnh" type="file" /><br />
           
            <img src="@Url.Content("~/Content/HinhAnhSP/"+Model.HinhAnh1)" width="150" height="100" />

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Hình ảnh 2
            <input name="HinhAnh" type="file" /><br />
            
            <img src="@Url.Content("~/Content/HinhAnhSP/"+Model.HinhAnh2)" width="150" height="100" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Hình ảnh 3
            <input name="HinhAnh" type="file" /><br />
           
            <img src="@Url.Content("~/Content/HinhAnhSP/"+Model.HinhAnh3)" width="150" height="100" />

            <span style="color:red">@ViewBag.upload</span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Số lượng tồn
            @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Lượt xem
            @Html.EditorFor(model => model.LuotXem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LuotXem, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Lượt bình chọn
            @Html.EditorFor(model => model.LuotBinhChon, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LuotBinhChon, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Lượt bình luận
            @Html.EditorFor(model => model.LuotBinhluan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LuotBinhluan, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-8">
            Hàng mới
            @Html.EditorFor(model => model.Moi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Moi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Nhà cung cấp
            @Html.DropDownList("MaNCC", null, new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Nhà sản xuất
            @Html.DropDownList("MaNSX", null, new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            Loại sản phẩm
            @Html.DropDownList("MaLoaiSP", null, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            Đã xóa 
            @Html.EditorFor(model => model.DaXoa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DaXoa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <input type="submit" value="Xác nhận " class="btn btn-danger" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Về trang chủ", "Index")
</div>
